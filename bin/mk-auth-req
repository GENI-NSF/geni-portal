#!/bin/sh
# -*- mode:sh -*-

if [ -z "$1" -o -z "$2" -o -z "$3" ]; then
    echo "Usage: mk-auth-req <authority> <key output file> <req output file>" 1>&2
    exit 1
fi

AUTHORITY=$1
KEYFILE=$2
REQFILE=$3

OPENSSL=/usr/bin/openssl
FQDN=`hostname -f`
SUBJECT="/CN=${AUTHORITY}.${FQDN}"

"${OPENSSL}" req -new -newkey rsa:1024 -nodes \
                 -subj "${SUBJECT}" \
                 -keyout "${KEYFILE}" \
                 -out "${REQFILE}"

if [ $? ]; then
    echo "Generated ${REQFILE} and ${KEYFILE}"
else
    echo "Certificate request generation failed." 1>&2
fi
