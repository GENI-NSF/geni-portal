#----------------------------------------------------------------------
#
# Change the expiration time for a GENI slice
#
# Communicates with a GENI Slice Authority via its public API to update
# the slice with a different expiration time.
#
#----------------------------------------------------------------------

import sys
import logging
import optparse
from urlparse import urlparse
import uuid
from chapiclient import chapi

def init_logging(options):
    level = logging.INFO
    if options.debug:
        level = logging.DEBUG
    logging.basicConfig(level=level)

def parse_args(argv):
    parser = optparse.OptionParser("Renew given slice to given time")
    parser.add_option("--debug", action="store_true", default=False,
                       help="enable debugging output")
    parser.add_option("-k", "--keyfile", metavar="FILE",
                      help="Invoker's private key")
    parser.add_option("-c", "--certfile", metavar="FILE",
                      help="Invoker's GENI certificate")
    parser.add_option("-u", "--url", help="authority URL, requires SA and MA (https://chSOMETHING)")
    parser.add_option("-s", "--slice", help="slice name or uuid or urn")
    parser.add_option("-e", "--expiration", help="new expiration time")
    options,args = parser.parse_args()
    if not (options.keyfile and options.certfile and options.url
            and options.slice and options.expiration):
        parser.print_help()
        raise Exception("\nERROR: Missing some required arguments\n")
    return options,args

def verify_url(url):
    parsed = urlparse(url)
    if (parsed.scheme in ('http', 'https')
        and parsed.netloc
        #and parsed.path
        ):
        return parsed.geturl()
    else:
        raise Exception("Invalid url %r" % (url))

def load_cert(certfile):
    f = open(certfile)
    cert = f.read()
    f.close()
    # Can we do additional tests to verify that this is an x509 cert?
    # Or will that be taken care of downstream, by the ch_interface?
    return cert

def load_private_key(certfile):
    f = open(certfile)
    key = f.read()
    f.close()
    # Can we do additional tests to verify that this is a private key?
    # Or will that be taken care of downstream, by the ch_interface?
    return key

def main(argv=None):
    if argv is None:
        argv = sys.argv
    try:
        options,args = parse_args(argv)
        init_logging(options)
        url = verify_url(options.url)
        saurl = url+"/SA"
        cert = load_cert(options.certfile)
        pkey = load_private_key(options.keyfile)
        slice_urn = chapi.find_slice_urn(options.slice, saurl, cert, pkey)
    except Exception as e:
        sys.stderr.write(str(e) + "\n")
        return 1
    if slice_urn is None:
        sys.stderr.write("Invalid slice %s\n" % options.slice)
        return 1

    proxy = chapi.make_proxy(saurl, cert, pkey)
    result = proxy.update_slice(slice_urn, [], {'fields':
                {'SLICE_EXPIRATION': options.expiration}})

    # print "%r" % (result)
    if not 'code' in result:
        msg = "Invalid response from server: %r" % (result)
        sys.stderr.write(msg + "\n")
        return 1
    status = result['code']
    if not status == 0:
        if 'output' in result:
            msg = "Error: %s" % (result['output'])
        else:
            msg = "Error %d, no reason given" % (status)
        sys.stderr.write(msg + "\n")
        return status
    sys.stderr.write("Renewed slice %s to %s\n" % options.slice, options.expiration)
    return 0

if __name__ == "__main__":
    sys.exit(main())
