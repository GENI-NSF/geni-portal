#!/bin/bash
# List all slices at SA
#
# Usage: list_slices.sh

if [ $# -ne 0 ]; then
    echo "Usage: list_slices.sh"
    exit
else
    echo "COPY (select slice_urn, slice_email, value as slice_creator, creation as slice_created, expiration as slice_expires, slice_id as slice_uuid from ma_member_attribute, sa_slice where (name='email_address') and owner_id=member_id) TO STDOUT with CSV HEADER;" | psql -U portal -h localhost portal
fi